<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/si_id"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:hint="Account ID"
            android:inputType="numberSigned"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/si_interest"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:hint="New Interest"
            android:inputType="numberDecimal|numberSigned"
            android:maxLength="4"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/si_id"
            app:layout_constraintStart_toStartOf="@+id/si_id"
            app:layout_constraintTop_toBottomOf="@+id/si_id" />

        <Button
            android:id="@+id/si_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="OK"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/si_interest"
            app:layout_constraintStart_toStartOf="@id/si_interest"
            app:layout_constraintEnd_toEndOf="@id/si_interest"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>